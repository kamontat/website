{
	"$schema": "https://openapi.vercel.sh/vercel.json",
	"routes": [
		{
			"src": "/(?<lang>th|en)/(?<path>.*)",
			"has": [
				{
					"type": "host",
					"value": "blog.kc.in.th"
				}
			],
			"dest": "/blog/$lang/$path"
		},
		{
			"src": "/(?<path>.*)",
			"has": [
				{
					"type": "host",
					"value": "blog.kc.in.th"
				}
			],
			"dest": "/blog/en/$path"
		},
		{
			"src": "/blog(?<path>.*)",
			"has": [
				{
					"type": "host",
					"value": "blog.kc.in.th"
				}
			],
			"headers": {
				"Location": "/$path"
			},
			"status": 301
		},
		{
			"src": "^/$",
			"headers": {
				"Location": "/en"
			},
			"status": 301
		},
		{
			"src": "^/blog[/]?$",
			"headers": {
				"Location": "/blog/en"
			},
			"status": 301
		}
	]
}
