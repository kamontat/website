{
	// Use vercel.config.json so vercel cli don't know about this file
	// vercel should use output file from `astro build`
	"$schema": "https://openapi.vercel.sh/vercel.json",
	"routes": [
		{
			"src": "/(?<path>.*)",
			"has": [
				{
					"type": "host",
					"value": "blog.kc.in.th"
				}
			],
			"dest": "/blog/$path"
		},
		{
			// Avoid blank page before i18n redirection
			"src": "^/$",
			"headers": {
				"Location": "/en"
			},
			"status": 301
		},
		{
			"src": "^/blog[/]?$",
			"headers": {
				"Location": "/blog/en"
			},
			"status": 301
		}
	]
}
