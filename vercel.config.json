{
	"$schema": "https://openapi.vercel.sh/vercel.json",
	"routes": [
		{
			"$comment": "when visit /blog/* with path",
			"src": "^/blog/(?<path>.*)$",
			"headers": {
				"Location": "https://blog.kc.in.th/$path"
			},
			"status": 301
		},
		{
			"$comment": "when visit /blog without path, default to english",
			"src": "^/blog[/]?$",
			"headers": {
				"Location": "https://blog.kc.in.th"
			},
			"status": 301
		},
		{
			"$comment": "when visit blog.kc.in.th/, rewrite to kc.in.th/blog",
			"src": "^/$",
			"headers": {
				"Location": "https://blog.kc.in.th"
			},
			"dest": "https://kc.in.th/blog"
		}
	]
}
