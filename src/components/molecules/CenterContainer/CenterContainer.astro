---
import type { BaseProps, WithChildren, WithComponent } from "@core/types/astro";
import Div from "@components/atoms/Div/Div.svelte";

type Props = BaseProps & WithChildren & WithComponent<typeof Div>;

let { class: className, ...rest }: Props = Astro.props;
---

<Div class="px-12 min-h-full w-full items-center justify-center md:px-52">
	<Div
		class={[
			className,
			"items-center",
			"mb-4",
			"mt-6",
			"px-6",
			"md:px-0",
			"sm:px-10",
		]}
		{...rest}><slot /></Div
	>
</Div>
