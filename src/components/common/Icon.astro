---
import type { HTMLTag, Polymorphic } from "astro/types";

type Props<T extends HTMLTag> = Polymorphic<{ as: T }> & {
	class: string;
	size: "sm" | "md" | "lg";
};

const { as, class: className, size, ...rest } = Astro.props;
const sizeMap: Record<string, string> = {
	sm: "xl",
	md: "2xl",
	lg: "4xl",
};
const Tag = as ?? "i";
---

<Tag
	aria-hidden="true"
	class={className}
	un-text={sizeMap[size ?? "md"]}
	un-mx="2"
	{...rest}
/>
