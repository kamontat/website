---
import Icon from "@components/common/Icon.astro";
import { getLocale } from "@utils/i18n";

interface Props {
	title: string;
}

const locale = getLocale(Astro.currentLocale);
const { title } = Astro.props;
---

<header>
	<nav
		un-flex="~ row"
		un-items="center"
		un-justify="between"
		un-bg="blue-400"
		un-px="2 sm:6 lg:8"
		un-h="12"
		un-max-w="screen"
	>
		<div un-flex="~ row 1" un-justify="stretch" un-items="center">
			<Icon as="a" class="i-line-md:watch-twotone-loop" size="md" href="/" />
			<span un-text="xl" un-font="sans light" un-px="2">{title}</span>
		</div>
		<div un-flex="~ row">
			<span>{locale}</span>
		</div>
	</nav>
</header>
