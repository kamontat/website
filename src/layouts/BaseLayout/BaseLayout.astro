---
import type { BaseProps, WithComponent } from "@core/types/astro";

import HeadMeta from "@components/organisms/HeadMeta/HeadMeta.astro";
import BodyFooter from "@components/organisms/BodyFooter/BodyFooter.astro";
import BodyHeader from "@components/organisms/BodyHeader/BodyHeader.astro";
import BodyMain from "@components/organisms/BodyMain/BodyMain.astro";
import GoogleTagManager from "@components/organisms/GoogleTagManager/GoogleTagManager.astro";

import { ClientRouter } from "astro:transitions";
import { getLocaleISO } from "@core/utils/locale";

import "./BaseLayout.css";

type Props = BaseProps<{
	mainLocale?: string;
	gtmId?: string;
}> &
	WithComponent<typeof HeadMeta>;

const { mainLocale, gtmId, ...props } = Astro.props;
---

<html lang={getLocaleISO(props.locale)}>
	<head>
		<HeadMeta {...props} />

		<script is:inline src="/scripts/theme.js"></script>
		<link rel="sitemap" href="/sitemap-index.xml" />

		<slot name="head" />
		<ClientRouter />
	</head>
	<body
		class:list={[
			"font-sans",
			"font-light",
			"transition ease-in-out duration-150",
			"bg-white",
			"dark:bg-gray-700",
			"black:bg-black",
		]}
	>
		<!-- Google Tag Manager -->
		<GoogleTagManager {gtmId} />
		<!-- End Google Tag Manager -->
		<div class="h-screen">
			<slot name="header">
				<BodyHeader locale={props.locale} title={props.title} />
			</slot>
			<BodyMain locale={mainLocale}>
				<slot />
			</BodyMain>
			<slot name="footer"><BodyFooter /></slot>
		</div>
	</body>
</html>
