---
import type { ComponentProps } from "astro/types";
import BaseLayout from "@layouts/BaseLayout.astro";

type Props = Omit<ComponentProps<typeof BaseLayout>, "site" | "author">;
const { locale, title, description } = Astro.props;
---

<BaseLayout
	site="KC"
	{locale}
	{title}
	{description}
	favicon="/favicon.ico"
	favicon:light="/favicon-light.svg"
	favicon:dark="/favicon-dark.svg"
>
	<slot />
</BaseLayout>
