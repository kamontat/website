---
import type { BaseProps, WithComponent } from "@core/types/astro";
import BaseLayout from "@layouts/BaseLayout.astro";

type Props = BaseProps &
	Pick<WithComponent<typeof BaseLayout>, "locale" | "title" | "description">;

const { locale, title, description } = Astro.props;
---

<BaseLayout
	site="KC"
	{locale}
	{title}
	{description}
	favicon="/favicon.ico"
	favicon:light="/favicon-light.svg"
	favicon:dark="/favicon-dark.svg"
>
	<slot />
</BaseLayout>
