---
import type { ComponentProps } from "astro/types";
import BaseLayout from "./BaseLayout.astro";

type Props = Omit<ComponentProps<typeof BaseLayout>, "site" | "author">;
const { locale, title, description } = Astro.props;
---

<BaseLayout site="KC" {locale} {title} {description}>
	<link slot="head" rel="icon" type="image/svg+xml" href="/favicon-light.svg" />
	<slot />
</BaseLayout>
