---
import type { ComponentProps } from "astro/types";
import BaseLayout from "./BaseLayout.astro";

type Props = Omit<ComponentProps<typeof BaseLayout>, "site">;
const { locale, title, description, author } = Astro.props;
---

<BaseLayout
	site="KCBlog"
	{locale}
	{title}
	{description}
	{author}
	favicon="/favicon.svg"
	favicon:light="/favicon-light.svg"
	favicon:dark="/favicon-dark.svg"
>
	<slot />
</BaseLayout>
