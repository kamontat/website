---
import type { ComponentProps } from "astro/types";
import BaseLayout from "./BaseLayout.astro";

type Props = Omit<ComponentProps<typeof BaseLayout>, "site">;
const { locale, title, description, author } = Astro.props;
---

<BaseLayout site="KCBlog" {locale} {title} {description} {author}>
	<link slot="head" rel="icon" type="image/svg+xml" href="/favicon-light.svg" />
	<slot />
</BaseLayout>
