---
import type { BaseProps, WithComponent } from "@core/types/astro";
import BaseLayout from "@layouts/BaseLayout.astro";

type Props = BaseProps &
	Pick<
		WithComponent<typeof BaseLayout>,
		"locale" | "mainLocale" | "title" | "description" | "author"
	>;

const { locale, title, description, author, mainLocale } = Astro.props;
---

<BaseLayout
	site="KCBlog"
	{locale}
	{mainLocale}
	{title}
	{description}
	{author}
	favicon="/favicon.ico"
	favicon:light="/favicon-light.svg"
	favicon:dark="/favicon-dark.svg"
	gtmId="GTM-MV6LZJ77"
>
	<slot />
</BaseLayout>
